<h1>Create Customer</h1>

<%= form_for(@customer) do |f| %>

	<p>
	<%= f.label :name %>
	<%= f.text_field :name %>
	</p>
	
	<p>
	<%= f.label :company %>
	<%= f.text_field :company %>
	</p>
	
	<p>
	<%= f.label :phone %>
	<%= f.text_field :phone %>
	</p>
	
	<p>
	<%= f.label :email %>
	<%= f.text_field :email %>
	</p>
	
	<p>
	<%= f.label :billing_address %>
	<%= f.text_field :billing_address %>
	</p>
	
	<p>
	<%= f.label :shipping_address %>
	<%= f.text_field :shipping_address %>
	</p>
	
	<p>
	<%= f.label :taxable %>
	<%= f.check_box :taxable %>
	</p>
	
	<p>
	<%= f.label :tax_location %>
	<%= f.text_field :tax_location %>
	</p>
	
	<p>
	<%= f.submit %>
	</p>
<% end %> 
